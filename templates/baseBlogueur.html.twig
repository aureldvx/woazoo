<!doctype html>
<html lang="fr_FR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {# META TAGS • Généraux #}
    <meta name="title" content="{% block metaTitle %}{% endblock %} - Woazoo">
    <meta name="description" content="{% block metaDescription %}{% endblock %}">

    {# META TAGS • Facebook #}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{% block metaFacebookUrl %}{% endblock %}">
    <meta property="og:title" content="{% block metaFacebookTitle %}{% endblock %}">
    <meta property="og:description" content="{% block metaFacebookDescription %}{% endblock %}">
    <meta property="og:image" content="{% block metaFacebookImage %}{% endblock %}">

    {# META TAGS • Twitter #}
    <meta property="twitter:card" content="{% block metaTwitterCard %}{% endblock %}{# default : summary_large_image #}">
    <meta property="twitter:url" content="{% block metaTwitterUrl %}{% endblock %}">
    <meta property="twitter:title" content="{% block metaTwitterTitle %}{% endblock %}">
    <meta property="twitter:description" content="{% block metaTwitterDescription %}{% endblock %}">
    <meta property="twitter:image" content="{% block metaTwitterImage %}{% endblock %}">

    {# Stylesheets #}
    {% block stylesheets %}{% endblock %}
    
    {# Page Title #}
    <title>{% block pageTitle %}{% endblock %} | Woazoo</title>
</head>
<body>

    <!-- Background en fond -->
    <div class="columnsBackground">
        <div class="columnsBackground__column"></div>
        <div class="columnsBackground__column"></div>
        <div class="columnsBackground__column"></div>
        <div class="columnsBackground__column"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
        <div class="columnsBackground__column showDesktop"></div>
    </div>

    <div class="container">
        <!-- HEADER -->
        <header class="baseHeader">
            <div class="headerBackground">
                <div class="headerBackground__column"></div>
                <div class="headerBackground__column"></div>
                <div class="headerBackground__column"></div>
                <div class="headerBackground__column"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
                <div class="headerBackground__column showDesktop"></div>
            </div>

            <!-- Logo Woazoo -->
            <a class="header__brandLogo" href="{{ path("blogger_dashboard") }}">
                <img src="../img/logo-woazoo.svg" class="brandLogo__image" alt="Logo Woazoo représentant un W avec une plume d'écriture">
            </a>

            <!-- Menu burger -->
            <div class="header__menuBurger hideDesktop">
                <div class="menuBurger__bars menuBurger__topBar"></div>
                <div class="menuBurger__bars menuBurger__centerBar"></div>
                <div class="menuBurger__bars menuBurger__bottomBar"></div>
            </div>

            <!-- Logo utilisateur -->
            <div class="header__userLogo hideDesktop">
                <svg viewBox="0 0 512 512">
                    <path d="M447.8 438.3c-7.2-31.8-48.3-47.3-62.5-52.3-15.6-5.5-37.8-6.8-52.1-10-8.2-1.8-20.1-6.3-24.1-11.1s-1.6-49.3-1.6-49.3 7.4-11.5 11.4-21.7c4-10.1 8.4-37.9 8.4-37.9s8.2 0 11.1-14.4c3.1-15.7 8-21.8 7.4-33.5-.6-11.5-6.9-11.2-6.9-11.2s6.1-16.7 6.8-51.3c.9-41.1-31.3-81.6-89.6-81.6-59.1 0-90.6 40.5-89.7 81.6.8 34.6 6.7 51.3 6.7 51.3s-6.3-.3-6.9 11.2c-.6 11.7 4.3 17.8 7.4 33.5 2.8 14.4 11.1 14.4 11.1 14.4s4.4 27.8 8.4 37.9c4 10.2 11.4 21.7 11.4 21.7s2.4 44.5-1.6 49.3c-4 4.8-15.9 9.3-24.1 11.1-14.3 3.2-36.5 4.5-52.1 10-14.2 5-55.3 20.5-62.5 52.3-1.1 5 2.7 9.7 7.9 9.7H440c5.1 0 8.9-4.7 7.8-9.7z"/>
                </svg>
            </div>

            <!-- Header navigation -->
            <nav class="header__navigation">
                <ul>
                    <li>
                        <a href="#!" class="primaryButton">
                            Blog preview
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('blogger_preview') }}" class="secondaryButton deconnectButton">
                            Gestion du blog
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('blogger_dashboard') }}" class="secondaryButton">
                            À la Une
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('articles_recents') }}" class="secondaryButton">
                            Articles récents
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('user_collections') }}" class="secondaryButton">
                            Mes collections
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('user_search') }}" class="secondaryButton">
                            Recherche géolocalisée
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('parametres') }}" class="secondaryButton">
                            Paramètres
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('homepage') }}" class="secondaryButton deconnectButton">
                            Déconnexion
                        </a>
                    </li>
                </ul>
            </nav>
        </header>


        <!-- Contenu de la page -->
        <main id="{% block bodyName %}{% endblock %}">
            {% block body %}{% endblock %}
        </main>



        <!-- Footer -->
        <footer>
            <p class="footer__copyright">&copy; Woazoo – 2019</p>
            <p class="footer__love">Fait avec Amour et Passion à Bordeaux.</p>
        </footer>

    </div>


    <script src="../js/layout.js"></script>
    <!-- Scripts -->
    {% block scripts %}{% endblock %}
    {#
    À utiliser si besoin dans les pages concernées :
    <script src="/node_modules/materialize-css/dist/js/materialize.min.js"></script>
    <script src="/node_modules/rellax/rellax.min.js"></script>
    <script src="/node_modules/scroll-out/dist/scroll-out.min.js"></script>
    <script src="/node_modules/swup/dist/swup.min.js"></script>
    #}
</body>
</html>