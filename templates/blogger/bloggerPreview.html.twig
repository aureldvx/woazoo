{# Stylesheets #}
{% block stylesheets %}<link rel="stylesheet" href="../css/blogueurPreview.css">{% endblock %}
{# Page Title #}
{% block pageTitle %}Gestion du Blog{% endblock %}
{# Class du body #}
{% block bodyName %}bloggerPreview{% endblock %}
{# BODY #}
{% block body %}
    <!-- start • HERO Section -->
    <section class="hero">
        <div class="bp-backgroundIllustration">
            <div class="bp-profileImage"></div>
        </div>
        <h1 class="bp-titleBlog">Nom du blog</h1>
        <p class="bp-descriptionBlog">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus ad adipisci cupiditate dolores fugit ipsam, minima minus, nulla obcaecati officia qui sapiente soluta suscipit ullam unde vitae voluptatem! Maxime, nemo!</p>
        <div class="bp-counters">
            <div class="bp-counters__element bp-counter__bookmark">
                <svg viewBox="0 0 512 512">
                    <path d="M128 80v380c0 3.3 3.8 5.2 6.4 3.2l116.8-92c2.9-2.1 6.8-2.1 9.6 0l116.8 92c2.6 2 6.4.1 6.4-3.2V80c0-17.7-14.3-32-32-32H160c-17.7 0-32 14.3-32 32z"/>
                </svg>
                <span>3K</span>
            </div>
            <div class="bp-counters__element bp-counter__love">
                <svg viewBox="0 0 512 512">
                    <path d="M352 56h-1c-39.7 0-74.8 21-95 52-20.2-31-55.3-52-95-52h-1c-61.9.6-112 50.9-112 113 0 37 16.2 89.5 47.8 132.7C156 384 256 456 256 456s100-72 160.2-154.3C447.8 258.5 464 206 464 169c0-62.1-50.1-112.4-112-113z"/>
                </svg>
                <span>3K</span>
            </div>
            <div class="bp-counters__element bp-counter__share">
                <svg viewBox="0 0 512 512">
                    <path d="M444.7 230.4l-141.1-132c-1.7-1.6-3.3-2.5-5.6-2.4-4.4.2-10 3.3-10 8v66.2c0 2-1.6 3.8-3.6 4.1C144.1 195.8 85 300.8 64.1 409.8c-.8 4.3 5 8.3 7.7 4.9 51.2-64.5 113.5-106.6 212-107.4 2.2 0 4.2 2.6 4.2 4.8v65c0 7 9.3 10.1 14.5 5.3l142.1-134.3c2.6-2.4 3.4-5.2 3.5-8.4-.1-3.2-.9-6.9-3.4-9.3z"/>
                </svg>
                <span>3K</span>
            </div>
        </div>
    </section>
    <!-- end • HERO Section -->

    <!-- start • CATÉGORIES ASSOCIÉES Section -->
    <div class="h-categoriesTrendsContainer">
        <p class="h-titleCategoriesTrends">Catégories associées :</p>
        <div class="h-categoriesTrends">
            {% for i in 0..2 %}
                <a href="#!" class="h-category secondaryButton hideDesktop">
                    <div class="h-category__image">
                        <img src="../img/img1.jpg" alt="Illustration de la catégorie">
                    </div>
                    <span class="h-category__title">Catégorie</span>
                </a>
            {% endfor %}
            {% for i in 0..5 %}
                <a href="#!" class="h-category secondaryButton showDesktop">
                    <span class="h-category__title">Catégorie</span>
                </a>
            {% endfor %}
        </div>
    </div>
    <!-- end • CATÉGORIES ASSOCIÉES Section -->

    <!-- start • ARTICLES ÉPINGLÉS Section -->
    <section class="bp-articlesEpingles">
        <h2 class="titleGradientMultiline"><span>Articles épinglés</span></h2>
        <span class="bp-numberEpingles">2/3 articles épinglés</span>

        <div class="bp-articlesEpinglesContainer">
            {% for i in 0..1 %}
                <article class="u-lastArticles__singleContainer">
                    <div class="u-lastArticle__image">
                        <img src="../img/img1.jpg" alt="illu">
                    </div>

                    <header class="u-lastArticle__header">
                        <h3>Nom de l'article</h3>
                        <span class="u-lastArticle__publicationDate"><time datetime="2019-01-14">3j</time></span>
                    </header>

                    <p class="u-lastArticle__content">Lorem ipsum dolor sit amet, consectetur adipiscing elit,
                        sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                        Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>

                    <a href="#!" class="u-lastArticle__linkRead primaryButton">Lire la suite</a>

                    <div class="u-lastArticle__footer">
                        <div class="u-userActions">
                            <div class="u-userActions__love u-userActions__element">
                                <svg viewBox="0 0 512 512">
                                    <path d="M352 56h-1c-39.7 0-74.8 21-95 52-20.2-31-55.3-52-95-52h-1c-61.9.6-112 50.9-112 113 0 37 16.2 89.5 47.8 132.7C156 384 256 456 256 456s100-72 160.2-154.3C447.8 258.5 464 206 464 169c0-62.1-50.1-112.4-112-113z"/>
                                </svg>
                                <span class="u-userActions__count">150</span>
                            </div>
                            <div class="u-userActions__bookmark u-userActions__element">
                                <svg viewBox="0 0 512 512">
                                    <path d="M128 80v380c0 3.3 3.8 5.2 6.4 3.2l116.8-92c2.9-2.1 6.8-2.1 9.6 0l116.8 92c2.6 2 6.4.1 6.4-3.2V80c0-17.7-14.3-32-32-32H160c-17.7 0-32 14.3-32 32z"/>
                                </svg>
                                <span class="u-userActions__count">150</span>
                            </div>
                            <div class="u-userActions__share u-userActions__element">
                                <svg viewBox="0 0 512 512">
                                    <path d="M444.7 230.4l-141.1-132c-1.7-1.6-3.3-2.5-5.6-2.4-4.4.2-10 3.3-10 8v66.2c0 2-1.6 3.8-3.6 4.1C144.1 195.8 85 300.8 64.1 409.8c-.8 4.3 5 8.3 7.7 4.9 51.2-64.5 113.5-106.6 212-107.4 2.2 0 4.2 2.6 4.2 4.8v65c0 7 9.3 10.1 14.5 5.3l142.1-134.3c2.6-2.4 3.4-5.2 3.5-8.4-.1-3.2-.9-6.9-3.4-9.3z"/>
                                </svg>
                                <span class="u-userActions__count">150</span>
                            </div>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
    <!-- end • ARTICLES ÉPINGLÉS Section -->

    <!-- start • TOUS LES ARTICLES Section -->
    <section class="bp-allArticles">
        <h2 class="titleGradientMultiline"><span>Tous les articles</span></h2>
        <div class="bp-allArticlesContainer">
            {% for i in 0..28 %}
                <article class="u-lastArticles__singleContainer">
