{% extends "baseBlogueur.html.twig" %}
{# META TAGS • Général #}
{% block metaTitle %}{% endblock %}
{% block metaDescription %}{% endblock %}
{# META TAGS • Facebook #}
{% block metaFacebookUrl %}{% endblock %}
{% block metaFacebookTitle %}{% endblock %}
{% block metaFacebookDescription %}{% endblock %}
{% block metaFacebookImage %}{% endblock %}
{# META TAGS • Twitter #}
{% block metaTwitterCard %}{% endblock %}
{# default : summary_large_image #}
{% block metaTwitterUrl %}{% endblock %}
